<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="{x:Type TextBlock}" x:Key="NormalTextBlockStyle">
        <Style.Setters>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="LightGray"/>
        </Style.Setters>
    </Style>
    
    <Style TargetType="{x:Type TextBlock}" x:Key="NormalTextBlockStyleBold">
        <Style.Setters>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style.Setters>
    </Style>
    
    <Style TargetType="{x:Type TextBlock}" x:Key="ImportantTextBlockStyle">
        <Style.Setters>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="LightGray"/>
        </Style.Setters>
    </Style>
    
</ResourceDictionary>